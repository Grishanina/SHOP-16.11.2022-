<Window x:Class="WpfApp1.WindowProfile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="WindowProfile" Height="300" Width="300" Background="Pink">
    <Grid>
        <StackPanel>
            <GroupBox Margin="5" Header="Введите новое имя">
                <TextBox Name="tbName"></TextBox>
            </GroupBox>
            <GroupBox Margin="5" Header="Введите новую фамилию">
                <TextBox Name="tbSurname"></TextBox>
            </GroupBox>
            <GroupBox Margin="5" Header="Введите новое отчество">
                <TextBox Name="tbPatronymic"></TextBox>
            </GroupBox>
            <Button Click="Button_Click">Изменить данные</Button>
        </StackPanel>
    </Grid>
</Window>
