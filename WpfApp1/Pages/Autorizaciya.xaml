<Page x:Class="WpfApp1.Pages.Autorizaciya"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Autorizaciya">

    <Grid>
        <GroupBox x:Name="gb" Visibility="Visible" Grid.Row="1" Grid.Column="1" Header="Авторизация" BorderBrush="HotPink" FontSize="18" Width="400" Height="400">
            <StackPanel>
                <GroupBox Header="Логин" Height="60" Width="250" Margin="0, 30, 0, 0">
                    <TextBox x:Name="tblogin"></TextBox>
                </GroupBox>
                <GroupBox Header="Пароль" Height="60" Width="250" Margin="0, 10, 0, 0">
                    <PasswordBox x:Name="pbpas" Height="26"></PasswordBox>
                </GroupBox>

                <Button x:Name="Btn2" Margin="0, 50, 0, 0" Style="{StaticResource Auto}" Width="200" Height="40" Click="Btn2_Click">Авторизация</Button>
                <Button x:Name="Btn3" Margin="0, 20, 0, 0" Width="200" Height="40" Style="{StaticResource Reg}" Click="Btn3_Click">Регистрация</Button>
            </StackPanel>
        </GroupBox>
    </Grid>
</Page>
